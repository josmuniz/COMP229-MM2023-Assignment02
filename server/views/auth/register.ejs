<main style="margin-bottom: 10%;">

    <figure class="text-center">
        <h1 class="display-1">Register New User!</h1>
    </figure>
    <div style="margin: auto; padding: auto;">
        <form class="form" method="POST" style="margin:auto; padding: 5%;">

            <div class="form-group">
                <label for=username class="col-sm-2 col-form-label">Enter Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name=username id=username placeholder="Your Username"
                        required>
                </div>
            </div>

            <div class="form-group">
                <label for=email class="col-sm-2 col-form-label">Enter Email Address </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name=email id=email placeholder="Your Email"
                        required>
                </div>
            </div>
            <div class="form-group">
                <label for=displayName class="col-sm-2 col-form-label">Enter Your Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name=displayName id=displayName placeholder="Your Name"
                        required>
                </div>
            </div>
            <div class="form-group">
                <label for=password class="col-sm-2 col-form-label">Enter Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name=password id=password placeholder="Your Password"
                        required>
                </div>
            </div>
            <div>
                <span>
                    <button style="margin-left: 40%; margin-top: 2%;" class="btn btn-info"
                    href="" type="submit">Register Now</button>
                </span>
                <span>
                <a style="margin-left: auto; margin-top: 2%;" class="btn btn-warning"
                value="cancel" href="/" type="button">Cancel</a> 
                </span>   
            </div>
        </form>
    </div>
</main>